<h2>Modifier les infos de l'utilisateur</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="form-group">
      <%= f.input :nom, label: 'Nom', input_html: {autofocus: true} %>
  </div>
  
  <div class="form-group">
      <%= f.input :prenom, label: 'Prénom' %>
  </div>
  
  <div class="form-group">
      <%= f.input :pseudo, label: 'Pseudo' %>
  </div>
  
  <div class="form-group">
   <%= f.input :email, label: 'Adresse mail', input_html: {autocomplete: "email"} %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="form-group">
    <%= f.button :submit, "Mettre à jour" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Envie de supprimer votre compte ? <%= link_to 'Supprimer mon compte', registration_path(resource_name), data: {confirm: "Êtes-vous sûr(e) de supprimer le compte"}, method: :delete, class: 'btn btn-error' %></p>

<%= link_to "Retour", :back, class: 'btn' %>
