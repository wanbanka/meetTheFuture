
<h1>Futurs</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Décision liée</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @futurs.each do |futur| %>
      <tr>
        <td><%= futur.titre %></td>
        <td><%= texteCourt(futur.description) %></td>
        <td><% futur.decision.each do |decision| %>
        <%= decision.titre %>
        <% end %>
        </td>
        <td>
        <% if can? :show, @futur %>
        <%= link_to 'Afficher', futur %>
        <% end %>
        </td>
        <td>
        <% if can? :update, @futur %>
        <%= link_to 'Modifier', edit_futur_path(futur) %>
        <% end %>
        </td>
        <td>
        <% if can? :destroy, @futur %>
        <%= link_to 'Supprimer', futur, method: :delete, data: { confirm: 'Êtes-vous sûr(e) de supprimer ce futur ?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @futur %>
<%= link_to 'Créer un futur', new_futur_path %>
<% end %>