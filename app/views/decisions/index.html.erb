
<h1>Décisions</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
        <th>Theme</th>
        <th>Futur lié</th>
        <th>Première décision</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decisions.each do |decision| %>
      <tr>
        <td><%= decision.titre %></td>
        <td><%= texteCourt(decision.description) %></td>
        <td><%= decision.theme.nom %></td>
        <td><% decision.futur.each do |futur| %>
        <%= texteCourt(futur.titre) %>
        <% end %>
        </td>
        <td><%= booleanToText(decision.first_decision) %></td>
        <td>
        <% if can? :show, @decision %>
        <%= link_to 'Afficher', decision %>
        <% end %>
        </td>
        <td>
        <% if can? :update, @decision %>
        <%= link_to 'Modifier', edit_decision_path(decision) %>
        <% end %>
        </td>
        <td>
        <% if can? :destroy, @decision %>
        <%= link_to 'Supprimer', decision, method: :delete, data: { confirm: 'Êtes-vous sûr(e) de supprimer cette décision ?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @decision %>
<%= link_to 'Créer une décision', new_decision_path %>
<% end %>